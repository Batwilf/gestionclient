{% extends 'base.html.twig' %}

{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ facture.client }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ facture.adresse }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ facture.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ facture.ville }}</td>
            </tr>
            <tr>
                <th>Montantht</th>
                <td>{{ facture.montantHT }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if facture.date %}{{ facture.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('facture_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('facture_edit', { 'id': facture.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
